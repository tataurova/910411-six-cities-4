{
  "setupFiles": ["<rootDir>/setup-tests.js"],
  "collectCoverageFrom": [
    "src/**/**/*.{js,jsx}",
    "!<rootDir>/node_modules/"
  ],
  "collectCoverage": true,
  "coverageDirectory": "test-coverage",
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "moduleDirectories": ["node_modules", "src"]
}
